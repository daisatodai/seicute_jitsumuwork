<h1>請求書登録</h1>
<%= form_with(model: @invoice, local: true) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_expanation">
      <%= @invoice.errors.count %>件のエラーがあります。
      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.fields_for :pictures do |picture| %>
    <p><%= f.label "画像" %></p>
      <%= render "picture_fields", f: picture %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "➕ 画像を追加", f, :pictures %>
    </div>
  </div>
  <%#= turbo_frame_tag "first_turbo_frame" do %>
    <div>
      <p><%= f.label :請求元 %></p>
      <p><%= f.select :requestor_id, Requestor.all.collect { |p| [ p.name, p.id ] } %>
      <%= link_to "請求元の追加", new_requestor_path %></p>
    </div>
  <%# end %>
  <div>
    <p><%= f.label :issued_on %></p>
    <p><%= f.date_select :issued_on %></p>
  </div>
  <div>
    <p><%= f.label :subject %></p>
    <p><%= f.text_field :subject %></p>
  </div>
  <div>
    <p><%= f.label :due_on %></p>
    <p><%= f.date_select :due_on %></p>
  </div>
  <div>
    <p><%= f.label :memo %></p>
    <p><%= f.text_area :memo %></p>
  </div>
  <div class="invoice-details">
  <p>詳細</p>
    <%= f.fields_for :invoice_details do |detail| %>
      <%= render "invoice_detail_fields", f: detail %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "➕ 詳細を追加", f, :invoice_details %>
    </div>
  </div>
  <p><%= f.submit %></p>
<% end %>