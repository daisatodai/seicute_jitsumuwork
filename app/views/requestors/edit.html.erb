<h1>請求元編集</h1>
<%= form_with(model: @requestor, local: true) do |form| %>
  <% if @requestor.errors.any? %>
    <div id="error_expanation">
      <%= @requestor.errors.count %>件のエラーがあります。
      <ul>
      <% @requestor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
  <p><%= form.label :name %></p>
  <p><%= form.text_field :name, style: "ime-mode:active" %></p>
  <br>
  <p><%= form.submit %></p>
  </div>
<% end %>