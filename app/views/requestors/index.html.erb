<h1>請求元一覧</h1>
<p><%= link_to new_requestor_path do %>
  <i class="fa-solid fa-building fa-xl"></i> <i class="fa-solid fa-plus fa-sm"></i>
<% end %></p>
<%= paginate @requestors %>
<table>
  <tr>
  <th>請求元</th>
  <th></th>
  </tr>
  <% @requestors.each do |requestor| %>
    <tr>
      <td><%= link_to requestor.name, edit_requestor_path(requestor.id) %></td>
      <td>
        <%= link_to requestor_path(requestor.id), method: :delete, data: {confirm: "削除しますか"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </td>
      <td></td>
    </tr>
  <% end %>
</table>
